                -changeCommand "SHAPESBrushContext -edit -symmetry #1 `currentCtx`;"
                SHAPESBrushUseSymmetryCheck;
    menuItem -edit
             -command "SHAPESBrushContext -edit -symmetryAxis 0 `currentCtx`; SHAPESBrushPropertiesSetSymmetryAxis 0;"
