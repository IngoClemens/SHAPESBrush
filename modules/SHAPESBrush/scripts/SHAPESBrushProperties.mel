           -command "SHAPESBrushDeleteFreeze"
           SHAPESBrushUnfreezeButton;
    checkBoxGrp -edit
                -changeCommand "optionVar -iv SHAPESBrushIgnoreHistoryWarning #1"
                SHAPESBrushIgnoreHistoryCheck;
